<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.actiknow.bloodconnect.activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/app_background_grey">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                style="@style/Widget.MyApp.ActionBar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/primary"
                android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
                app:layout_collapseMode="parallax">
                <RelativeLayout
                    android:id="@+id/toolbar_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical">

                    <!--  <ImageView
                          android:id="@+id/imageView"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_navigation_chevron_left"
                          android:layout_alignParentLeft="true"
                          android:layout_alignParentStart="true"/>-->

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <android.support.design.widget.CoordinatorLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

            </android.support.design.widget.CoordinatorLayout>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBar"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/text_color_grey_dark2"
                android:elevation="3dp"
                card_view:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ivName"
                        android:layout_toStartOf="@+id/ivName"
                        android:background="@null"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="@dimen/edittext_padding"
                        android:scrollHorizontally="false"
                        android:textSize="@dimen/text_size_small"/>

                    <ImageView
                        android:id="@+id/ivName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:padding="@dimen/edittext_padding"
                        android:src="@drawable/ic_edit"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_grey_dark2"
                android:elevation="3dp"
                card_view:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ivEmail"
                        android:layout_toStartOf="@+id/ivEmail"
                        android:background="@null"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="Enter Email"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="@dimen/edittext_padding"
                        android:textSize="@dimen/text_size_small"/>

                    <ImageView
                        android:id="@+id/ivEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:padding="@dimen/edittext_padding"
                        android:src="@drawable/ic_edit"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_grey_dark2"
                android:elevation="3dp"
                card_view:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ivMobile"
                        android:layout_toStartOf="@+id/ivMobile"
                        android:background="@null"
                        android:ellipsize="end"
                        android:maxLength="10"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="Enter Mobile Number"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="@dimen/edittext_padding"
                        android:textSize="@dimen/text_size_small"/>

                    <ImageView
                        android:id="@+id/ivMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:padding="@dimen/edittext_padding"
                        android:src="@drawable/ic_edit"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_grey_dark2"
                android:elevation="3dp"
                card_view:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="@dimen/edittext_padding"
                        android:layout_centerVertical="true"
                        android:text="My Address"
                        android:textSize="@dimen/text_size_small"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_toStartOf="@+id/imageView"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/edittext_padding"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" android:id="@+id/imageView"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="My Registered Cars"/>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llRegisteredCars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </LinearLayout>


            <TextView
                android:id="@+id/tvRegisterNewCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/text_size_small"
                android:text="Register New Car"
                android:textColor="@color/fab_5"
            />

        </LinearLayout>
        <TextView
            android:id="@+id/tvAddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="UPDATE PROFILE"
            android:textColor="@color/text_color_white"
        />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>